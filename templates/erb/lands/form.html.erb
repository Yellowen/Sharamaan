{% load i18n %}
<!-- Modal -->
<div id="add-layer-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="{% trans 'Add new layer' %}" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">{% trans 'new layer' %}</h3>
  </div>
  <div class="modal-body">
    <div class="modal-form">
      <form id="new-layer-form">
      <input id="layer-name" type="text" name="layer-name" value="" placeholder="{% trans "Layer name" %}..." />
      </form>
    </div>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">{% trans "Close" %}</button>
